                                    </form>
                                </div>
                                <div class="btn-group" role="group" aria-label="Button group">
                                    <form method="post" action="/beneficiario/eliminar/<%= beneficiario[beneficiarios].idBeneficiario %>">
                                        <button class="btn btn-link" type="submit">Eliminar</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
